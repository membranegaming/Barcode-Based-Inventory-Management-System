using System;
using System.Windows.Forms;

namespace store_parts
{
    public partial class MachineMasterForm : Form
    {
        public MachineMasterForm()
        {
            InitializeComponent();
        }

        private void MachineMasterForm_Load(object sender, EventArgs e)
        {
            try
            {
                this.machineMasterTableAdapter.Fill(this.mainDB.MachineMaster);
                UpdateRecordCount();
                
                // Don't add new row automatically - wait for user to click Add
                this.machineMasterBindingSource.CurrentChanged += new EventHandler(BindingSource_CurrentChanged);
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error loading machine data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void BindingSource_CurrentChanged(object sender, EventArgs e)
        {
            if (this.machineMasterBindingSource.Current != null)
            {
                var currentRow = ((System.Data.DataRowView)this.machineMasterBindingSource.Current).Row;
                if (currentRow != null)
                {
                    var id = currentRow["id"];
                    if (id != DBNull.Value && Convert.ToInt32(id) < 0)
                    {
                        this.idTextBox.Text = "Auto";
                    }
                }
            }
            UpdateRecordCount();
        }

        private void btnAdd_Click(object sender, EventArgs e)
        {
            try
            {
                this.machineMasterBindingSource.AddNew();
                this.machine_nameTextBox.Focus();
                
                // Set default value for is_active
                this.is_activeCheckBox.Checked = true;
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error adding new machine: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnSave_Click(object sender, EventArgs e)
        {
            try
            {
                if (string.IsNullOrWhiteSpace(this.machine_nameTextBox.Text))
                {
                    MessageBox.Show("Please enter a machine name.", 
                        "Validation Error", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                    this.machine_nameTextBox.Focus();
                    return;
                }

                this.Validate();
                this.machineMasterBindingSource.EndEdit();
                this.tableAdapterManager.UpdateAll(this.mainDB);
                
                MessageBox.Show("Machine data saved successfully!", 
                    "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);
                
                this.machineMasterBindingSource.AddNew();
                this.machine_nameTextBox.Focus();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error saving machine data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnDelete_Click(object sender, EventArgs e)
        {
            try
            {
                if (this.machineMasterBindingSource.Current == null)
                {
                    MessageBox.Show("Please select a machine to delete.", 
                        "No Selection", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                    return;
                }

                if (MessageBox.Show("Are you sure you want to delete this machine?", 
                    "Confirm Delete", MessageBoxButtons.YesNo, MessageBoxIcon.Question) == DialogResult.Yes)
                {
                    this.machineMasterBindingSource.RemoveCurrent();
                    this.tableAdapterManager.UpdateAll(this.mainDB);
                    
                    MessageBox.Show("Machine deleted successfully!", 
                        "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error deleting machine: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnClear_Click(object sender, EventArgs e)
        {
            try
            {
                this.machineMasterBindingSource.CancelEdit();
                this.machineMasterBindingSource.AddNew();
                this.machine_nameTextBox.Focus();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error clearing form: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnClose_Click(object sender, EventArgs e)
        {
            this.Close();
        }

        private void btnRefresh_Click(object sender, EventArgs e)
        {
            try
            {
                this.machineMasterTableAdapter.Fill(this.mainDB.MachineMaster);
                UpdateRecordCount();
                MessageBox.Show("Data refreshed successfully!", 
                    "Refresh", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error refreshing data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void UpdateRecordCount()
        {
            int totalRecords = this.machineMasterBindingSource.Count;
            lblRecordCount.Text = string.Format("Total Machines: {0}", totalRecords);
        }

        private void machineMasterDataGridView_CellDoubleClick(object sender, DataGridViewCellEventArgs e)
        {
        }
    }
}
