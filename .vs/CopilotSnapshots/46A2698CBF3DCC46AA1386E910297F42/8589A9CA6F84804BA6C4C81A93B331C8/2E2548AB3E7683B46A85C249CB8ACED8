using System;
using System.Windows.Forms;

namespace store_parts
{
    public partial class PartyMasterForm : Form
    {
        public PartyMasterForm()
        {
            InitializeComponent();
        }

        private void PartyMasterForm_Load(object sender, EventArgs e)
        {
            try
            {
                // Load data into the PartyMaster table
                this.partyMasterTableAdapter.Fill(this.mainDB.PartyMaster);
                UpdateRecordCount();
                
                // Don't add new row automatically - wait for user to click Add
                this.partyMasterBindingSource.CurrentChanged += new EventHandler(BindingSource_CurrentChanged);
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error loading party data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void BindingSource_CurrentChanged(object sender, EventArgs e)
        {
            // Show "Auto" for new records (negative ID), actual ID for saved records
            if (this.partyMasterBindingSource.Current != null)
            {
                var currentRow = ((System.Data.DataRowView)this.partyMasterBindingSource.Current).Row;
                if (currentRow != null)
                {
                    var id = currentRow["id"];
                    if (id != DBNull.Value && Convert.ToInt32(id) < 0)
                    {
                        this.idTextBox.Text = "Auto";
                    }
                }
            }
            UpdateRecordCount();
        }

        private void btnAdd_Click(object sender, EventArgs e)
        {
            try
            {
                // Add a new party
                this.partyMasterBindingSource.AddNew();
                this.party_nameTextBox.Focus();
                
                // Set default value for is_active
                this.is_activeCheckBox.Checked = true;
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error adding new party: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnSave_Click(object sender, EventArgs e)
        {
            try
            {
                // Validate party name is entered
                if (string.IsNullOrWhiteSpace(this.party_nameTextBox.Text))
                {
                    MessageBox.Show("Please enter a party name.", 
                        "Validation Error", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                    this.party_nameTextBox.Focus();
                    return;
                }

                // Validate and save
                this.Validate();
                this.partyMasterBindingSource.EndEdit();
                this.tableAdapterManager.UpdateAll(this.mainDB);
                
                MessageBox.Show("Party data saved successfully!", 
                    "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);
                
                // Automatically prepare for next entry
                this.partyMasterBindingSource.AddNew();
                this.party_nameTextBox.Focus();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error saving party data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnDelete_Click(object sender, EventArgs e)
        {
            try
            {
                if (this.partyMasterBindingSource.Current == null)
                {
                    MessageBox.Show("Please select a party to delete.", 
                        "No Selection", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                    return;
                }

                if (MessageBox.Show("Are you sure you want to delete this party?", 
                    "Confirm Delete", MessageBoxButtons.YesNo, MessageBoxIcon.Question) == DialogResult.Yes)
                {
                    this.partyMasterBindingSource.RemoveCurrent();
                    this.tableAdapterManager.UpdateAll(this.mainDB);
                    
                    MessageBox.Show("Party deleted successfully!", 
                        "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);
                }
            }
