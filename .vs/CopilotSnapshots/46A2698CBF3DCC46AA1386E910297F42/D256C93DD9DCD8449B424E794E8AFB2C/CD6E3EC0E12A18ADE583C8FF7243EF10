using System;
using System.Windows.Forms;

namespace store_parts
{
    public partial class ItemMasterForm : Form
    {
        public ItemMasterForm()
        {
            InitializeComponent();
        }

        private void ItemMasterForm_Load(object sender, EventArgs e)
        {
            try
            {
                // Load data into the ItemMaster table
                this.itemMasterTableAdapter.Fill(this.mainDB.ItemMaster);
                
                // Automatically prepare for new entry
                this.itemMasterBindingSource.AddNew();
                this.item_nameTextBox.Focus();
                
                // Subscribe to current changed event for ID display
                this.itemMasterBindingSource.CurrentChanged += new EventHandler(BindingSource_CurrentChanged);
                
                UpdateRecordCount();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error loading item data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void BindingSource_CurrentChanged(object sender, EventArgs e)
        {
            // Show "Auto" for new records (negative ID), actual ID for saved records
            if (this.itemMasterBindingSource.Current != null)
            {
                var currentRow = ((System.Data.DataRowView)this.itemMasterBindingSource.Current).Row;
                if (currentRow != null)
                {
                    var id = currentRow["id"];
                    if (id != DBNull.Value && Convert.ToInt32(id) < 0)
                    {
                        this.idTextBox.Text = "Auto";
                    }
                }
            }
            UpdateRecordCount();
        }

        private void btnAdd_Click(object sender, EventArgs e)
        {
            try
            {
                // Add a new item
                this.itemMasterBindingSource.AddNew();
                this.item_nameTextBox.Focus();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error adding new item: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnSave_Click(object sender, EventArgs e)
        {
            try
            {
                // Validate item name is entered
                if (string.IsNullOrWhiteSpace(this.item_nameTextBox.Text))
                {
                    MessageBox.Show("Please enter an item name.", 
                        "Validation Error", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                    this.item_nameTextBox.Focus();
                    return;
                }

                // Validate and save
                this.Validate();
                this.itemMasterBindingSource.EndEdit();
                this.tableAdapterManager.UpdateAll(this.mainDB);
                
                MessageBox.Show("Item data saved successfully!", 
                    "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);
                
                // Automatically prepare for next entry
                this.itemMasterBindingSource.AddNew();
                this.item_nameTextBox.Focus();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error saving item data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnDelete_Click(object sender, EventArgs e)
        {
            try
            {
                if (this.itemMasterBindingSource.Current == null)
                {
                    MessageBox.Show("Please select an item to delete.", 
                        "No Selection", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                    return;
                }

                if (MessageBox.Show("Are you sure you want to delete this item?", 
                    "Confirm Delete", MessageBoxButtons.YesNo, MessageBoxIcon.Question) == DialogResult.Yes)
                {
                    this.itemMasterBindingSource.RemoveCurrent();
                    this.tableAdapterManager.UpdateAll(this.mainDB);
                    
                    MessageBox.Show("Item deleted successfully!", 
                        "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error deleting item: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnClear_Click(object sender, EventArgs e)
        {
            try
            {
                this.itemMasterBindingSource.CancelEdit();
                this.itemMasterBindingSource.AddNew();
                this.item_nameTextBox.Focus();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error clearing form: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnClose_Click(object sender, EventArgs e)
        {
            this.Close();
        }

        private void btnRefresh_Click(object sender, EventArgs e)
        {
            try
            {
                this.itemMasterTableAdapter.Fill(this.mainDB.ItemMaster);
                UpdateRecordCount();
                MessageBox.Show("Data refreshed successfully!", 
                    "Refresh", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error refreshing data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void UpdateRecordCount()
        {
            int totalRecords = this.itemMasterBindingSource.Count;
            lblRecordCount.Text = string.Format("Total Items: {0}", totalRecords);
        }

        private void itemMasterDataGridView_CellDoubleClick(object sender, DataGridViewCellEventArgs e)
        {
            // When a row is double-clicked, the binding automatically updates the form fields
            // User can then edit and save
        }
    }
}
