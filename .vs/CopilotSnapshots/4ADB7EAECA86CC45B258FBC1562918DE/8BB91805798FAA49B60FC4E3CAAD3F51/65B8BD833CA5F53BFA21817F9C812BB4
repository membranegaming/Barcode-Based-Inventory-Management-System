        private void machinery_item_inward_unit2BindingNavigatorSaveItem_Click(object sender, EventArgs e)
        {
            this.Validate();
            this.machinery_item_inward_unit2BindingSource.EndEdit();
            this.tableAdapterManager.UpdateAll(this.mainDB);

        }

        private void Form1_Load(object sender, EventArgs e)
        {
            try
            {
                // Load master data for dropdowns
                LoadMasterData();
                
                // Load data into the 'mainDB.machinery_item_inward_unit2' table
                this.machinery_item_inward_unit2TableAdapter.Fill(this.mainDB.machinery_item_inward_unit2);
                
                // Automatically prepare for new data entry
                AddNewRecordWithDefaults();
                
                // Focus on the first editable field
                this.challan_noTextBox.Focus();
                
                // Subscribe to binding source events to handle ID display
                this.machinery_item_inward_unit2BindingSource.CurrentChanged += 
                    new EventHandler(BindingSource_CurrentChanged);
                    
                // Subscribe to AddingNew event to set default values
                this.machinery_item_inward_unit2BindingSource.AddingNew += 
                    new AddingNewEventHandler(BindingSource_AddingNew);
                
                // Show unused parts by default
                ShowUnusedParts();
                UpdateRecordCount();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error loading form: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void BindingSource_AddingNew(object sender, AddingNewEventArgs e)
        {
            // This event fires when AddNew() is called on the binding source
            // We can set default values here, but we'll do it after the row is created
        }

        private void AddNewRecordWithDefaults()
        {
            this.machinery_item_inward_unit2BindingSource.AddNew();
            
            // Set default values for the new record
            if (this.machinery_item_inward_unit2BindingSource.Current != null)
            {
                var currentRow = ((DataRowView)this.machinery_item_inward_unit2BindingSource.Current).Row;
                if (currentRow != null)
                {
                    // Set date to today if not already set
                    if (currentRow["date"] == DBNull.Value)
                    {
                        currentRow["date"] = DateTime.Today;
                    }
                    
                    // Set bill_date to today if not already set
                    if (currentRow["bill_date"] == DBNull.Value)
                    {
                        currentRow["bill_date"] = DateTime.Today;
                    }
                    
                    // Set used_in_machine and taken_by to empty strings to avoid NULL issues
                    if (currentRow["used_in_machine"] == DBNull.Value)
                    {
                        currentRow["used_in_machine"] = string.Empty;
                    }
                    
                    if (currentRow["taken_by"] == DBNull.Value)
                    {
                        currentRow["taken_by"] = string.Empty;
                    }
                }
            }
        }

        private void LoadMasterData()
        {
            try
            {
                // Load PartyMaster data for dropdown (only active parties)
                this.partyMasterTableAdapter.Fill(this.mainDB.PartyMaster);
                
                // Load ItemMaster data for dropdown (only active items)
                this.itemMasterTableAdapter.Fill(this.mainDB.ItemMaster);
                
                // Load MachineMaster data for dropdown (only active machines)
                this.machineMasterTableAdapter.Fill(this.mainDB.MachineMaster);
                
                // Load PersonMaster data for dropdown (only active persons)
                this.personMasterTableAdapter.Fill(this.mainDB.PersonMaster);
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error loading master data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void RefreshMasterData()
        {
            try
            {
                // Store current selections
                string selectedParty = this.party_nameComboBox.Text;
                string selectedItem = this.itemComboBox.Text;
                
                // Reload master data
                LoadMasterData();
                
                // Restore selections if they still exist
                if (!string.IsNullOrEmpty(selectedParty))
                {
                    this.party_nameComboBox.Text = selectedParty;
                }
                if (!string.IsNullOrEmpty(selectedItem))
                {
                    this.itemComboBox.Text = selectedItem;
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error refreshing master data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void BindingSource_CurrentChanged(object sender, EventArgs e)
        {
            // Show "Auto" for new records (negative ID), actual ID for saved records
            if (this.machinery_item_inward_unit2BindingSource.Current != null)
            {
                var currentRow = ((DataRowView)this.machinery_item_inward_unit2BindingSource.Current).Row;
                if (currentRow != null)
                {
                    var id = currentRow["id"];
                    if (id != DBNull.Value && Convert.ToInt32(id) < 0)
                    {
                        this.idTextBox.Text = "Auto";
                    }
                }
            }
        }

        private void btnAddData_Click(object sender, EventArgs e)
        {
            try
            {
                // Add a new row with default values
                AddNewRecordWithDefaults();
                
                // Focus on the first input field for data entry
                this.challan_noTextBox.Focus();
                
                MessageBox.Show("Ready to add new data. Fill in the fields and click Save.", 
                    "Add New Record", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error adding new record: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnSave_Click(object sender, EventArgs e)
        {
            try
            {
                // Validate required fields
                if (string.IsNullOrWhiteSpace(this.party_nameComboBox.Text))
                {
                    MessageBox.Show("Please select a party name.", 
                        "Validation Error", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                    this.party_nameComboBox.Focus();
                    return;
                }
                
                if (string.IsNullOrWhiteSpace(this.itemComboBox.Text))
                {
                    MessageBox.Show("Please select an item.", 
                        "Validation Error", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                    this.itemComboBox.Focus();
                    return;
                }
                
                // Ensure default values are set before saving
                if (this.machinery_item_inward_unit2BindingSource.Current != null)
                {
                    var currentRow = ((DataRowView)this.machinery_item_inward_unit2BindingSource.Current).Row;
                    if (currentRow != null)
                    {
                        // Ensure used_in_machine and taken_by are not null
                        if (currentRow["used_in_machine"] == DBNull.Value)
                        {
                            currentRow["used_in_machine"] = string.Empty;
                        }
                        
                        if (currentRow["taken_by"] == DBNull.Value)
                        {
                            currentRow["taken_by"] = string.Empty;
                        }
                    }
                }
                
                // Store challan number and party name before saving (for same-challan multi-item entry)
                string savedChallanNo = this.challan_noTextBox.Text;
                string savedPartyName = this.party_nameComboBox.Text;
                
                // Validate the form
                this.Validate();
                
                // End any edits in progress
                this.machinery_item_inward_unit2BindingSource.EndEdit();
                
                // Save changes to the database
                this.tableAdapterManager.UpdateAll(this.mainDB);
                
                MessageBox.Show("Data saved successfully!", 
                    "Save Successful", MessageBoxButtons.OK, MessageBoxIcon.Information);
                
                // Automatically add a new record after saving with default values
                AddNewRecordWithDefaults();
                
                // Restore challan number and party name (for entering multiple items from same challan)
                // But clear item so user can select the next item
                this.challan_noTextBox.Text = savedChallanNo;
                this.party_nameComboBox.Text = savedPartyName;
                this.itemComboBox.SelectedIndex = -1; // Clear item selection
                
                // Focus on the item dropdown for quick entry of next item
                this.itemComboBox.Focus();
                
                // Refresh the data grid
                RefreshPartsUsageData();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error saving data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

