using System;
using System.Windows.Forms;

namespace store_parts
{
    public partial class PartyMasterForm : Form
    {
        public PartyMasterForm()
        {
            InitializeComponent();
        }

        private void PartyMasterForm_Load(object sender, EventArgs e)
        {
            try
            {
                // Load data into the PartyMaster table
                this.partyMasterTableAdapter.Fill(this.mainDB.PartyMaster);
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error loading party data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnAdd_Click(object sender, EventArgs e)
        {
            try
            {
                // Add a new party
                this.partyMasterBindingSource.AddNew();
                this.party_nameTextBox.Focus();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error adding new party: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnSave_Click(object sender, EventArgs e)
        {
            try
            {
                // Validate and save
                this.Validate();
                this.partyMasterBindingSource.EndEdit();
                this.tableAdapterManager.UpdateAll(this.mainDB);
                
                MessageBox.Show("Party data saved successfully!", 
                    "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error saving party data: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnDelete_Click(object sender, EventArgs e)
        {
            try
            {
                if (MessageBox.Show("Are you sure you want to delete this party?", 
                    "Confirm Delete", MessageBoxButtons.YesNo, MessageBoxIcon.Question) == DialogResult.Yes)
                {
                    this.partyMasterBindingSource.RemoveCurrent();
                    this.tableAdapterManager.UpdateAll(this.mainDB);
                    
                    MessageBox.Show("Party deleted successfully!", 
                        "Success", MessageBoxButtons.OK, MessageBoxIcon.Information);
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error deleting party: " + ex.Message, 
                    "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btnClose_Click(object sender, EventArgs e)
        {
            this.Close();
        }
    }
}
